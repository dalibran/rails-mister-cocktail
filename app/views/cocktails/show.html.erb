<h1><%=@cocktail.name %></h1>
<p>Ingredients:</p>
<ul>
  <% if @cocktail.ingredients.empty? %>
    <li>None</li>
  <% end %>
  <% @cocktail.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
  <% if @cocktail.photo? %>
    <li><%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %></li>
  <% end %>
</ul>


